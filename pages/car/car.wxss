.car {
  padding: 16rpx;
}

.list .car-card {
  display: flex;
  align-items: center;
  flex-direction: row;
}

/* .l {} */

.c {
  width: 110rpx;
}

.c image {
  height: 130rpx;
  width: 90rpx;
  padding: 10rpx;
}

.r {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.r .top {
  font-size: 30rpx;
  width: 420rpx;
  padding-bottom: 40rpx;
}

.r .bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

/* box-shadow: 0rpx -2rpx 0rpx red, 上
-4rpx 0rpx 0rpx blue,左
4rpx 0rpx 0rpx skyblue,右
0rpx 2rpx 0rpx orange,下 */
.jie-suan {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.jie-suan .left {
  font-size: 30rpx;
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.jie-suan .left>text {
  padding: 16rpx;
}

.jie-suan .right {
  display: flex;

}

.car-card {
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0rpx -2rpx 2rpx #cccccc,
    0rpx 2rpx 2rpx #cccccc,
    -2rpx 0rpx 2rpx #cccccc,
    2rpx 0rpx 2rpx #cccccc;
  margin-bottom: 16rpx;
}