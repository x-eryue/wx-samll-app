<!--pages/home/home.wxml-->
<view class="home">
  <!-- 轮播图 -->
  <swipe lbtArr="{{lbt}}" frameHeight="450rpx"></swipe>
  <!-- grid -->
  <van-grid column-num="3" border='{{0}}'>
    <van-grid-item use-slot class="van-grid-item" url="/pages/grid/news-list/news-list">
      <image src="../../assets/grid/menu1.png" />
      <text>新闻</text>
    </van-grid-item>
    <van-grid-item use-slot class="van-grid-item" url="/pages/grid/pics-list/pics-list">
      <image src="../../assets/grid/menu2.png" />
      <text>图片</text>
    </van-grid-item>
    <van-grid-item use-slot class="van-grid-item" url="/pages/grid/goods-list/goods-list">
      <image src="../../assets/grid/menu3.png" />
      <text>商品</text>
    </van-grid-item>
    <van-grid-item use-slot class="van-grid-item">
      <image src="../../assets/grid/menu4.png" />
      <text>留言反馈</text>
    </van-grid-item>
    <van-grid-item use-slot class="van-grid-item">
      <image src="../../assets/grid/menu5.png" />
      <text>视频专区</text>
    </van-grid-item>
    <van-grid-item use-slot class="van-grid-item">
      <image src="../../assets/grid/menu6.png" />
      <text>联系我们</text>
    </van-grid-item>
  </van-grid>

</view>